<!-- message  -->


		<% if flash[:notice] %>
			<div class="col-md-4 alert alert-success"><h4><%=flash[:notice]%></h4></div>
		<%end%>

		<% if flash[:warning] %>
			<div class="col-md-4 alert alert-warning"><h4><%=flash[:warning]%></h4></div>
